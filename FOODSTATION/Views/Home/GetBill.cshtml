@{
    ViewBag.Title = "Bill";
}
    <div id="_BillPartial" style="direction:rtl">
        @Html.Partial("_BillPartial")
    </div>
    <div class="modal fade Region" id="Modal-MakeSure">
        <div class="modal-dialog modalCenter">
            <div class="modalContent-Region" style="background:#fff ; position:relative">
                <div class="Region-modal-body">
                    <div class="form-horizontal">
                        <h3>هل تودُ بالفعل ارسال الطلب ؟</h3>
                    </div>
                </div>
                <div class="modal-footer">
                    <div class="form-group">
                        <div class="col-md-offset-3 col-md-6">
                            <a onclick="RequestTypeConfirm()" class="btn btn-primary">تاكيد</a>
                            <a id="btnMakeSureColse" class="btn modal-BtnClose btn btn-default" data-dismiss="modal">إغلاق</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="modal fade Region" id="Modal-RequestType">
        <div class="modal-dialog modalCenter">
            <div class="modalContent-Region" style="background:#fff ; position:relative">
                @using (Html.BeginForm("AddBillAndItems", "Home", FormMethod.Post, new { enctype = "multipart/form-data" }))
                {
                    <div class="Region-modal-body">
                        <div class="form-horizontal">
                            <h3>قم بتحديد نوع الطلب</h3>
                        </div>

                        <div class="RequstTypeDiv">

                            <div>
                                <ul>
                                    @foreach (var dinningType in ViewBag.DinnintTypes)
                                    {
                                        <li onclick="Confirm@(dinningType.Id)()">
                                            <label class="Radio-@dinningType.Id">
                                                @dinningType.Name
                                                <input type="radio" name="diningTypeId" value="@dinningType.Id" />
                                            </label>
                                        </li>
                                    }
                                </ul>

                                <div id="TextAreaDiv" style="text-align:right;display:none">
                                    <span class="EnterYourPlace">أدخل موقعك الحالي</span>
                                    <textarea class="MyTextArea" rows="5" cols="30" placeholder="المنطة/الحي/أقرب معلم معروف" name="Location"></textarea>
                                </div>
                            </div>
                        </div>



                    </div>
                    <div class="modal-footer">
                        <div class="form-group">
                            <div class="col-md-offset-3 col-md-6">
                                <button type="submit" class="btn btn-primary">ارسال</button>
                                <a id="btnMakeSureColse" class="btn modal-BtnClose btn btn-default" data-dismiss="modal">إغلاق</a>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
    @section Scripts
{
        <script language="javascript" type="text/javascript">
            window.onbeforeunload = function (ent) {
                debugger;
                if (confirm('are you sure')) {
                    document.getElementById('<%btn.ClintID %>').click();


                }
                else
                    return false
            }
            function Confirm1() {
                document.getElementById("TextAreaDiv").style.display = "block";
            }
            function Confirm2() {
                document.getElementById("TextAreaDiv").style.display = "none";
            }
            function Confirm3() {
                document.getElementById("TextAreaDiv").style.display = "none";
            }

        </script>
    }


