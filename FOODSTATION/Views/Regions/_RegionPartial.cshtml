@model IEnumerable<FOODSTATION.Models.Region>

<div>
    <h2>قائمة باسماء المناطق</h2>
</div>
<div>
    <p>
        <a href="#" class="btn btn-primary" data-toggle="modal" data-target="#Modal-regionCreate">أضافة منطقة</a>
    </p>
</div>
<div>
    <table class="table" id="regionTable">
        <tr class="btn-primary">
            <th>
                أسم المدينة
            </th>
            <th>
                الدولة
            </th>
            <th></th>
        </tr>

        @foreach (var item in ViewBag.Regions)
        {
            <tr>
                <td>
                    @item.Name
                </td>
                <td>
                    @item.Country.Name
                </td>
                <td>
                    <a style="font-size:20px" onclick="EditRegionConfirm(@item.Id)"><i class="fa-solid fa-pen-to-square Action-Icon" style="color: #005eff;"></i></a> |
                    <a style="font-size:20px" onclick="DeleteRegionConfirm(@item.Id)"><i class="fa-solid fa-trash-can Action-Icon" style="color: #ff2600;"></i></a>
                    <input type="hidden" id="RegionId" />
                </td>
            </tr>
        }
    </table>
</div>
