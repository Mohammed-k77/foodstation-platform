@model CloudRestaurant.Models.RegisterViewModel
@{
    ViewBag.Title = "تسجيل الاشتراك";
}

<div class="container">
    <div class="row" style="margin-top:50px">
        <div class="col-md-5 manPhoto">
            <img src="~/images/Regi.jpg" style="width: 500px; margin-left: 10px;" />
        </div>

        <div class="col-md-7 Register-Div">
            <h2 class="headerh2">@ViewBag.Title</h2>
            <hr style=" border-top: 1.5px solid teal; " />
            @using (Html.BeginForm("Register", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
            {
                @Html.AntiForgeryToken()
                @Html.ValidationSummary("", new { @class = "text-danger" })
                <div class="form-group">
                    <div class="col-md-9">
                        @Html.TextBoxFor(m => m.UserName, new { @class = "form-control" })
                    </div>
                    @Html.LabelFor(m => m.UserName, new { @class = "col-md-3 control-label" })
                </div>
                <div class="form-group">
                    <div class="col-md-9">
                        @Html.TextBoxFor(m => m.Email, new { @class = "form-control" })
                    </div>
                    @Html.LabelFor(m => m.Email, new { @class = "col-md-3 control-label" })
                </div>
                <div class="form-group">
                    <div class="col-md-9">
                        @Html.PasswordFor(m => m.Password, new { @class = "form-control" })
                    </div>
                    @Html.LabelFor(m => m.Password, new { @class = "col-md-3 control-label" })
                </div>
                <div class="form-group">
                    <div class="col-md-9">
                        @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control" })
                    </div>
                    @Html.LabelFor(m => m.ConfirmPassword, new { @class = "col-md-3 control-label" })
                </div>
                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        <input type="submit" value="إشتراك" class="btn btn-default" style="background-color:teal ; color:white;" />
                    </div>
                </div>
            }

        </div>

    </div>
</div>

