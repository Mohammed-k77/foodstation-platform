<div class="modal fade" id="Modal-billItems">
    <div class="modal-dialog">
        <div class="modalContent-Item">
            <div class="modal-header">
                <h2 class="modal-title" style="text-align:center">الطلب</h2>
            </div>
            <div class="Item-modal-body">
                <div>
                    <h2 class="header" style="text-align: center; color: white; font-weight: bold; text-decoration: underline black; padding: 10px;">الفاتورة</h2>
                    <div class="TableDiv" style=" width: 500px; margin: auto; border: 2px solid burlywood; background: teal; height: auto; text-align: center; text-decoration: underline;">
                        <table class="table table-striped" id="mytable">
                            <tr class="btn-primary">

                                <th style="color:black">
                                    أسم العنصر
                                </th>
                                <th style="color:black">
                                    السعر
                                </th>
                            </tr>
                            @if (ViewBag.billitems != null)
                            {
                                foreach (var item in ViewBag.billitems)
                                {
                                    <tr>
                                        <td>
                                            @item.Name
                                        </td>
                                        <td>
                                            @item.Price
                                        </td>
                                    </tr>
                                }
                            }

                        </table>
                    </div>
                </div>

            </div>
            <div class="modal-footer">
                <div class="form-group">
                    <div class="col-md-offset-3 col-md-6">
                        <input value="تأكيد الطلب" class="btn btn-success modal-BtnCreate" id="btnCreate" />
                        <button id="btnCreateColse" type="button" class="btn modal-BtnClose" data-dismiss="modal">أغلاق</button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
