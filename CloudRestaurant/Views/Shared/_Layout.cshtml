                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a href="#" class="navbar-brand">
                    <i class="fa fa-mortar-board logoSize"></i>
                </a>
            </div>
            <div id="navbar" class="navbar-collapse collapse">
                <ul class="nav navbar-nav navbar-right">

                    <li>
                        <a href="#">
                            اتصل بنا
                            <i class="glyphicon glyphicon-envelope"></i>

                        </a>
                    <li>
                        <a href="#">
                            حول الموقع
                            <i class="glyphicon glyphicon-info-sign"></i>

                        </a>
                    </li>
                    <li>
                        <a href="/Restaurants/Index">
                            أصناف العروض
                            <i class="glyphicon glyphicon-folder-open"></i>

                        </a>
                    </li>
                    <li>
                        <a href="/Home/Index">
                            الرائسية
                            <i class="glyphicon glyphicon-home"></i>
                        </a>
                    </li>
                </ul>
                <!-- partial login-->
                @Html.Partial("_LoginPartial")

                <a href="@Url.Action("GetBill", "Home")" id="BasketId" class="Basket" style=" display: block; position: absolute; font-size: 23px; color: white; margin-top: 10px; padding: 10px; transform: translateX(8px);">
                    <i class="glyphicon glyphicon-shopping-cart" id="Bas"></i>
                </a>
            </div>
        </div>
    </nav>
    <!-- Navbar-->
    <!-- start landing-->
    <div class="landing row">
        <div class="col-md-6 ladingHalf">
            <div style="margin:10px 2px 2px 25px ; text-align:justify;">
                <h1 style=" font-size: 45px;  font-weight: bold;">Cloud-Restaurants</h1>
                <p style=" font-size: 20px;text-transform:uppercase;">You can browse all Restaurant and order all ***</p>
                <p class="lead">أهلا بك في المطاعم السحابية هنا نوفر لك جميع وجبات المطاعم والكافيهات والبوفيهات يمكنك تصفح المطاعم والطلب من أي مطعم بوقت واحد ومن مكان واحد المطاعم السحابية اختيارك الأفضل </p>

            </div>
        </div>
        <div class="col-md-6 ladingHalf" data-aos="zoom-in" data-aos-delay="200">
            <img src="~/images/hero-img.png" class="img-responsive landingImg"/>
        </div>
    </div>
    <!-- end landing-->

    <div class="container">
        <div style="min-height:550px">
            @RenderBody()
            <div class="row" id="_billItems">
                @Html.Partial("_ManageMdalPartial")
            </div>
        </div>
    </div>
    <!-- Footer-->

    <footer class="myfooter">
        <div class="container-fluid row">
                <div class="col-md-4">
                    <h3>
                        <i class="glyphicon glyphicon-question-sign"></i>
                        من نحن ؟
                    </h3>
                    <p>
                        السلام عليكم ورحمة الله وبركاته أنا محمد الديني وهذا هو اول مشروع في تطوير مواقع الويب مع الاستاذ القدير خالد السعداني جزاه الله الف خير
                    </p>
                </div>
                <div class="col-md-4">
                    <h3>
                        <i class="glyphicon glyphicon-globe"></i>
                        روابط خامة
                    </h3>
                    <ul>
                        <li><a href="#">وظايف للقطاع العام</a></li>
                        <li><a href="#">وظايف للقطاع الخاص</a></li>
                        <li><a href="#">وظايف خارج البلاد</a></li>
